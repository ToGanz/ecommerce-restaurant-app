<div class="row">
  <% @categories.each do |category| %>

    <div class="col-12">
      <h1 class="text-center"><%= category.heading %></h1>
    </div>

    <% @products.each do |product| %>
      <% if product.category == category %>
        <div class="col-4">
          <h5><%= product.name %></h5>

          <p><%= product.description %>

          <span><%= product.price %></span>
        
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>