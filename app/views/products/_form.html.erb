<div class="col-lg-4">
  <%= form_with(model: product, class: "input-group") do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :price, class: "form-label" %>
      <%= form.text_field :price, class: "form-control" %>
    </div>

    <% default_cat_id = product.category.nil? ? Category.first.id : product.category.id %>
    <div class="field">
      <%= form.label :category, class: "form-label" %>
      <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name, default_cat_id), class: "form-select" %>
    </div>

    <div class="field p-1">
      <%= form.label :vegetarian, class: "form-check-label" %>
      <%= form.check_box :vegetarian, class: "form-check-input" %>
    </div>

    <div class="field p-1">
      <%= form.label :vegan, class: "form-check-label" %>
      <%= form.check_box :vegan, class: "form-check-input" %>
    </div>

    <div class="field p-1">
      <%= form.label :available, class: "form-check-label" %>
      <%= form.check_box :available, { checked: true }, class: "form-check-input" %>
    </div>

    <div class="field p-1">
      <%= form.label :featured, class: "form-check-label" %>
      <%= form.check_box :featured, class: "form-check-input" %>
    </div>

    <div class="field">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
