<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Vegetarian</th>
      <th scope="col">Vegan</th>
      <th scope="col">Available</th>
      <th scope="col">Featured</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.vegetarian %></td>
        <td><%= product.vegan %></td>
        <td><%= product.available %></td>
        <td><%= product.featured %></td>
        <td><%= link_to 'Show', product, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

