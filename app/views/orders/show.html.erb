<p id="notice"><%= notice %></p>

<p>
  <strong>Total:</strong>
  <%= @order.total %>
</p>

<p>
  <strong>Paid:</strong>
  <%= @order.paid %>
</p>

<p>
  <strong>Delivered:</strong>
  <%= @order.delivered %>
</p>

<p>
  <strong>Canceled:</strong>
  <%= @order.canceled %>
</p>

<p>
  <strong>Street, no.:</strong>
  <%= @order.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @order.city %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @order.zip %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @order.created_at.httpdate %>
</p>

<p>
  <strong>Updated at:</strong>
  <%= @order.updated_at.httpdate %>
</p>

<p>
  <strong>Ordered products:</strong>
</p>

<ul class="order-items">
  <% @line_items.each do |line_item| %>
    <li><%= line_item.product.name %>, quantity: <%= line_item.quantity %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_category_path(@order), class: "btn btn-warning" %> 
<%= link_to 'Back', orders_path, class: "btn btn-warning" %>
