<p id="notice"><%= notice %></p>

<h1>Orders</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Total</th>
      <th scope="col">Paid</th>
      <th scope="col">Delivered</th>
      <th scope="col">Canceled</th>
      <th scope="col">Street, no.</th>
      <th scope="col">City</th>
      <th scope="col">Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each_with_index do |order, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= order.total %></td>
        <td><%= order.paid %></td>
        <td><%= order.delivered %></td>
        <td><%= order.canceled %></td>
        <td><%= order.street %></td>
        <td><%= order.city %></td>
        <td><%= order.zip %></td>
        <td><%= link_to 'Show', order, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Dashboard', admin_path, class: "btn btn-warning" %>
